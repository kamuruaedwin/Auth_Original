 <!-- Bet form when logged in -->
    <% if user_signed_in? %>
    <div id="bet-container">
        <div class="card" style="width: 100%">
            <h5>Place Bet</h5>
            <div class="card-body">
                <%= form_with(model: @bet, url: bets_path, method: :post, remote: true) do |form| %>
                <!-- Add form bet form requirements here -->
                <div class="form-group">
                    <label for="stake_amount">Stake Amount:</label>
                    <input type="number" class="form-control" id="stake_amount" placeholder="Enter stake amount">
                </div>

                <div class="form-group">
                    <label for="predicted_value_of_y">Your Prediction:</label>
                    <input type="number" class="form-control" id="predicted_value_of_y" placeholder="Enter your prediction">
                </div>

                <div class="actions">
                    <%= form.submit "Place Bet" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <% else %>
    <div id="bet-container">
        <div class="card" style="width: 100%">
            <div class="card-header">
                <p class="card-title">Login To Play</p>
            </div>
            <div class="card-body">
                <%= link_to 'Register', new_registration_path %><br>
                <%= link_to 'Login', new_session_path %>
            </div>
        </div>
    </div>
    <% end %>